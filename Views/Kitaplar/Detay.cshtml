@model BookStoreMVC.Models.Kitap

<div class="row">
    <div class="col-md-4">
        <img src="@Model.ResimUrl" alt="@Model.Ad" class="img-fluid rounded" />
    </div>
    <div class="col-md-8">
        <h2>@Model.Ad</h2>
        <p><strong>Yazar:</strong> @Model.Yazar</p>
        <p><strong>Kategori:</strong> @Model.Kategori</p>
        <p><strong>Fiyat:</strong> @Model.Fiyat.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</p>

        <div class="mt-3">
            <!--Sepete Ekle Formu -->
            <form asp-controller="Sepet" asp-action="SepeteEkle" method="post" style="display:inline-block;">
                <input type="hidden" name="kitapId" value="@Model.Id" />
                <input type="hidden" name="kitapAdi" value="@Model.Ad" />
                <input type="hidden" name="fiyat" value="@Model.Fiyat" />
                <input type="hidden" name="resimUrl" value="@Model.ResimUrl" />
                <button type="submit" class="btn btn-primary">Sepete Ekle</button>
            </form>

            <!-- Favorilere Ekle Formu -->
            <form asp-controller="Favori" asp-action="FavorilereEkle" method="post" style="display:inline-block; margin-left: 10px;">
                <input type="hidden" name="kitapId" value="@Model.Id" />
                <input type="hidden" name="kitapAdi" value="@Model.Ad" />
                <input type="hidden" name="fiyat" value="@Model.Fiyat" />
                <input type="hidden" name="resimUrl" value="@Model.ResimUrl" />
                <button type="submit" class="btn btn-warning">Favorilere Ekle</button>
            </form>
        </div>
    </div>
</div>
